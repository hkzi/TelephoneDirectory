@using X.PagedList
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<TelephoneDirectory.MVC.Models.PersonListViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form action="@Url.Action("Index", "Persons")" method="get" style="margin-bottom: 20px; padding: 15px; border: 1px solid #ddd; border-radius: 5px; max-width: 400px;">
   
    <div style="margin-bottom: 15px;">
        <label for="firstName" style="font-weight: bold;">Ad:</label>
        <input type="text" name="firstName" id="firstName" class="form-control"
               placeholder="Ad giriniz" style="width: 100%; padding: 8px; margin-top: 5px;">
    </div>
   
    <div style="margin-bottom: 15px;">
        <label for="lastName" style="font-weight: bold;">Soyad:</label>
        <input type="text" name="lastName" id="lastName" class="form-control"
               placeholder="Soyad giriniz" style="width: 100%; padding: 8px; margin-top: 5px;">
    </div>
  
    <div style="margin-bottom: 15px;">
        <label for="phoneNumber" style="font-weight: bold;">Telefon Numarası:</label>
        <input type="text" name="phoneNumber" id="phoneNumber" class="form-control"
               placeholder="Telefon numarası giriniz" style="width: 100%; padding: 8px; margin-top: 5px;">
    </div>

    <div>
        <button type="submit" class="btn btn-primary" style="padding: 10px 20px;">Ara</button>
    </div>
</form>


@Html.Partial("_PartialIndex");

