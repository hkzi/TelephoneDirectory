@model TelephoneDirectory.MVC.Models.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <title>Telefon Rehberi Otomasyonu| Şifre Değiştir</title>
    <!-- GLOBAL MAINLY STYLES-->
    <link href="~/AdminDashboard/admincast-master/html/dist/assets/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- THEME STYLES-->
    <link href="~/AdminDashboard/admincast-master/html/dist/assets/css/main.css" rel="stylesheet" />
    <!-- PAGE LEVEL STYLES-->
    <link href="~/AdminDashboard/admincast-master/html/dist/assets/css/pages/auth-light.css" rel="stylesheet" />
</head>

<body class="bg-silver-300">
    <div class="content">
        <div class="brand">
            <a class="link" href="/Users/Login">Telefon Rehberi Otomasyonu</a>
        </div>
        @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @* @Html.ValidationSummary(false, "", new { @class = "text-danger" }) *@
            <h3 class="m-t-10 m-b-10">Şifre Değişikliği</h3>
            <p class="m-b-20"> Yeni şifrenizi oluşturunuz</p>
            <div class="form-group">
                @Html.ValidationMessageFor(x => x.OldPassword, "", new { @class = "text-danger",placeholder="password" })
                @Html.TextBoxFor(x => x.OldPassword, new { @class = "form-control", placeholder = "Eski Şifre" })
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(x => x.NewPassword, "", new { @class = "text-danger", placeholder = "password" })
                @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", placeholder = "Yeni Şifre" })
            </div>
            <div class="form-group">
                @Html.ValidationMessageFor(x => x.ConfirmNewPassword, "", new { @class = "text-danger", placeholder = "password" })
                @Html.TextBoxFor(x => x.ConfirmNewPassword, new { @class = "form-control", placeholder = "Yeni Şifre Tekrarı" })
            </div>
            <div>
                @if (ViewBag.SuccessMessage != null)
                {
                    <label class="text-danger">@ViewBag.SuccessMessage</label>
                }
                else
                {
                    <label class="text-danger">@ViewBag.ErrorMessage</label>
                }
            </div>
            <div class="form-group">
                <button class="btn btn-info btn-block" type="submit">Gönder</button>
            </div>
        }
    </div>
    <!-- BEGIN PAGA BACKDROPS-->
    <div class="sidenav-backdrop backdrop"></div>

    <!-- END PAGA BACKDROPS-->
    <!-- CORE PLUGINS -->
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- PAGE LEVEL PLUGINS -->
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/vendors/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <!-- CORE SCRIPTS-->
    <script src="~/AdminDashboard/admincast-master/html/dist/assets/js/app.js" type="text/javascript"></script>
    <!-- PAGE LEVEL SCRIPTS-->

</body>

</html>
