@model TelephoneDirectory.MVC.Models.UserRoleViewModel

@{
    ViewData["Title"] = "Rol Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<h4>Kullanıcı: @Model.UserName</h4>

<form asp-action="AddUserRole" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        <label for="Roles">Rol Seçin:</label>
        <select asp-for="RoleId" asp-items="Model.OperationClaim" class="form-control">
            <option value="">Lütfen bir rol seçin</option>
        </select>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Ekle</button>
        <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">İptal</a>
    </div>
</form>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (!string.IsNullOrEmpty(TempData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (!string.IsNullOrEmpty(TempData["SuccessMessage"] as string))
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}